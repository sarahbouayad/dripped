<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>Employee Name</strong>: <%= user.userName %></p>
              <p><strong>Employee Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <div class="mt-5">
            <h2>Orders</h2>
            <% for(var i=0; i<orders.length; i++) { %>
              <li class="col-6 justify-content-between mt-5">
                <%= orders[i].size %>
                <%= orders[i].coffeeType %>
                <%= orders[i].milkOptions %>
                <%= orders[i].flavorShot %>

                <% if(orders[i].square===true) { %>
                  <span><i class="fa-solid fa-square-check square-check squareBox" onclick='clickButton(event)' data-square="true"
                      aria-hidden="true"></i></span>
                  <% } else { %>
                    <span><i class="fa-regular fa-square square-regular squareBox" data-square="false"
                        aria-hidden="true"></i></span>
                    <% } %>
  
                      <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
              </li>
              <% } %> 
          </div>
        </div>
      <div class="col-6">
        <ul class="row list-unstyled">
    
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>